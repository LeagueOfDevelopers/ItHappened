<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.lod_misis.ithappened">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:versionCode="${manVersionCode}"
        android:versionName="1.2"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:name="ru.lod_misis.ithappened.Retrofit.ItHappenedApplication"
        android:theme="@style/AppTheme">

        <receiver
            android:name=".ConnectionReciver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="a34afa9902a6b1e67f5f73a97f430acb267fba06" />
        <activity
            android:screenOrientation="portrait"
            android:name="ru.lod_misis.ithappened.Activities.UserActionsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="ru.lod_misis.ithappened.Activities.AddNewTrackingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyBack">
        </activity>
        <activity android:name="ru.lod_misis.ithappened.Activities.AddNewEventActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyBack">
        </activity>

        <activity android:name="ru.lod_misis.ithappened.Activities.EventDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyBack">
        </activity>

        <activity android:name="ru.lod_misis.ithappened.Activities.EditEventActivity"
            android:label="Изменить событие"
            android:theme="@style/Theme.MyBack"></activity>

        <activity android:name="ru.lod_misis.ithappened.Activities.EditTrackingActivity"
            android:theme="@style/Theme.MyBack"></activity>

        <activity android:name="ru.lod_misis.ithappened.Activities.EventsForTrackingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyBack"></activity>

        <activity android:name=".Activities.EventsRefActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MyBack"></activity>

    </application>

</manifest>