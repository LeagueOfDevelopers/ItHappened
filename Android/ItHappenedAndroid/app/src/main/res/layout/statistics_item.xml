<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hintForFactForTracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название факта"
                android:textSize="20sp"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10dp"/>

            <TextView
                android:layout_below="@id/hintForFactForTracking"
                android:id="@+id/textFactForTracking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текстовое описание"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:padding="10dp"/>

            <com.github.mikephil.charting.charts.LineChart
                android:layout_below="@id/textFactForTracking"
                android:id="@+id/graphFact"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="100dp"></com.github.mikephil.charting.charts.LineChart>

            <com.github.mikephil.charting.charts.PieChart
                android:layout_below="@id/graphFact"
                android:id="@+id/pieFact"
                android:layout_width="match_parent"
                android:layout_margin="10dp"
                android:layout_height="100dp"></com.github.mikephil.charting.charts.PieChart>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>