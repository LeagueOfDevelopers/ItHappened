<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/evetsRec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="42dp"
            android:layout_marginTop="4dp"
            android:clipToPadding="false"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"></android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/hintForEventsHistoryFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:text="Добавьте отслеживания и события!"/>

    <include layout="@layout/bottom_filters_screen" />

    <android.support.design.widget.FloatingActionButton
        app:backgroundTint="@color/colorPrimaryDark"
        android:src="@mipmap/filters_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:layout_anchor="@+id/bottom_sheet"
        app:layout_anchorGravity="top|end" />

</android.support.design.widget.CoordinatorLayout>