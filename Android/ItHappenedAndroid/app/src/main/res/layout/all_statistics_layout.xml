<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <RelativeLayout
        android:id="@+id/firstFactLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hintForFact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Самое частое событие"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/textForFirstFact"
        android:layout_below="@id/hintForFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Чаще всего у вас происходит событие {TrackingName} - раз в {EventsPeriod} дней"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:padding="10dp"/>

        <com.github.mikephil.charting.charts.BarChart
            android:layout_below="@id/textForFirstFact"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="300dp"></com.github.mikephil.charting.charts.BarChart>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/firstFactLayout"
        android:id="@+id/secondFactLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hintForSecondFact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="У вас произошло уже {EventsCount} событий!"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:padding="10dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/secondFactLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <com.github.mikephil.charting.charts.LineChart
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="300dp"></com.github.mikephil.charting.charts.LineChart>
    </RelativeLayout>

</RelativeLayout>