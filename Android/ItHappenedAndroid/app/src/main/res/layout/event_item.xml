<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    >

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        card_view:cardElevation="5dp">


            <RelativeLayout
                android:id="@+id/eventRL"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/TrackingTitle"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="left"
                    android:lines="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Сахар в крови"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/eventDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/TrackingTitle"
                    android:paddingBottom="5dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="14.12.2017 22:54"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ratingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/TrackingTitle"
                    android:paddingRight="7dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="2" />

                <ImageView
                    android:id="@+id/starIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/ratingValue"
                    android:layout_toEndOf="@+id/ratingValue"
                    android:layout_toRightOf="@+id/ratingValue"
                    android:paddingTop="8dp"
                    android:paddingBottom="5dp"
                    android:src="@mipmap/star" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scaleValue"
                    android:layout_below="@id/TrackingTitle"
                    android:layout_toRightOf="@id/starIcon"
                    android:text="10000"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingTop="7dp"
                    android:paddingLeft="50dp"
                    android:textSize="15sp"/>

              <!--  <ImageView
                    android:id="@+id/deleteEventIcn"
