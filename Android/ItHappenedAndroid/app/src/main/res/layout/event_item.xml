<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1"
    >

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="4dp"
        card_view:cardElevation="2dp">


            <RelativeLayout
                android:id="@+id/eventRL"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:id="@+id/TrackingTitle"
                    android:ellipsize="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="left"
                    android:layout_marginEnd="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_toLeftOf="@+id/deleteEventIcn"
                    android:layout_toStartOf="@+id/deleteEventIcn"
                    android:paddingBottom="7dp"
                    android:paddingLeft="7dp"
                    android:paddingTop="7dp"
                    android:text="Сахар в крови"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"></TextView>

                <TextView
                    android:id="@+id/eventDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/TrackingTitle"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignRight="@+id/TrackingTitle"
                    android:layout_below="@+id/TrackingTitle"
                    android:layout_marginLeft="7dp"
                    android:layout_marginStart="7dp"
                    android:paddingBottom="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="7dp"
                    android:text="14.12.2017 22:54"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/deleteEventIcn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/cross"
                    android:padding="7dp"/>

                <ImageView
                    android:id="@+id/editEventIcn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/eventDate"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:src="@mipmap/edit" />

            </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>