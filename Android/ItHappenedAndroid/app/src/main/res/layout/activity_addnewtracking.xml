<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/titleOfTracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Your title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleOfTracking"
        android:id="@+id/scale">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Шкала"
            />
        <it.beppi.tristatetogglebutton_library.TriStateToggleButton
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:id="@+id/tstb_1"
            app:tbMidColor="@color/actionbar_text_color"
            android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_below="@id/scale">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Текст"
                />
            <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:id="@+id/tstb_2"
                app:tbMidColor="@color/actionbar_text_color"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
    </LinearLayout>

            <RelativeLayout
                android:layout_below="@id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Текст"
                    />
                <it.beppi.tristatetogglebutton_library.TriStateToggleButton
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:id="@+id/tstb_3"
                    app:tbMidColor="@color/actionbar_text_color"
                    android:layout_alignParentRight="true"
                    />
    </RelativeLayout>




</RelativeLayout>